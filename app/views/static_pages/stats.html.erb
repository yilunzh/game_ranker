<h1>Dashboard</h1>

<div class="row">
	<div class="col-md-12">
		<h3>Top Players at Carvana</h3>

    <table class="table">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Department</th>
          <th>Rating</th>
          <th>W - L</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @top_players.each do |player| %>
          <tr>
            <td><%= @top_players.index(player) + 1 %></td>
            <td><%= player.name %></td>
            <td><%= player.department %></td>
            <td><%= player.rating.round %></td>
            <td><%= "#{player.wins} - #{player.losses}" %></td>
            <td><%= link_to 'Details', player %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "See more", players_path %>

	</div>
</div>

<div class="row">
	<h3>Pulse around the office</h3>
	<div class="col-md-6">
		<h4>Longest Current Win Streak</h4>
		<%= "#{@player_longest_winning_streak.name}: #{@player_longest_winning_streak.winning_streak}" %>
	</div>

	<div class="col-md-6">
		<h4>Longest Current Losing Streak</h4>
		<%= "#{@player_longest_losing_streak.name}: #{@player_longest_losing_streak.losing_streak}" %>
	</div>
</div>