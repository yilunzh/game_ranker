<p id="notice"><%= notice %></p>

<h1>Game Log
  <span class="btn-group">
    <%= button_to 'New Game', new_game_path, method: :get, class: "btn btn-info" %>
  </span>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Winning Team</th>
      <th>Losing Team</th>
      <th>Winner Match Score</th>
      <th>Loser Match Score</th>
      <th>Game Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.winners_losers[:winners].join(", ") %></td>
        <td><%= game.winners_losers[:losers].join(", ") %></td>
        <td><%= game.winners_losers[:winning_score] %></td>
        <td><%= game.winners_losers[:losing_score] %></td>
        <td><%= game.game_date %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
