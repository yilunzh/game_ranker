<p id="notice"><%= notice %></p>

<h1>Game Log</h1>

<table class="table">
  <thead>
    <tr>
      <th>Winning Team</th>
      <th>Losing Team</th>
      <th>Games Won</th>
      <th>Winner Score</th>
      <th>Loser Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.winners_losers[:winners].join(", ") %></td>
        <td><%= game.winners_losers[:losers].join(", ") %></td>
        <td><%= game.winners_losers[:winning_score] %></td>
        <td><%= game.winners_losers[:losing_score] %></td>
        <td><%= game.game_date %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

